@model Category

<form method="post" asp-action="Delete">
    <input asp-for="ID" hidden />
    <div class="border border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category:</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryName">Category Name:</label>
            <input asp-for="CategoryName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order:</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button class="btn btn-danger" type="submit" style="width: 150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

