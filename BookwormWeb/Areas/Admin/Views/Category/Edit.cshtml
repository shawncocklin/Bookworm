@model Category

<form method="post" asp-action="Edit">
    <div class="border border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category:</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryName">Category Name:</label>
            <input asp-for="CategoryName" type="text" value="" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order:</label>
            <input asp-for="DisplayOrder" type="number" value="" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width: 150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

