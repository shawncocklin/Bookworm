@model CoverType

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Cover Type:</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Cover Type:</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        
        <button class="btn btn-danger" type="submit" style="width: 150px">Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

